<body>
    <form method="post" action="/saveexpense">
        <div class="form-group">
            <label for="name">Title:</label>
            <input type="string" class="form-control" id="title" name="title" placeholder="Enter title">
        </div>
        <div class="form-group">
            <label for="paidBy">Paid by:</label>
            <select class="form-control" id="paidBy" name="paidBy">
                <option>Aayesha</option>
                <option>Suvu</option>
                <option>Sonika</option>
              </select>
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <input type="string" class="form-control" id="description" name="description" placeholder="Enter description">
        </div>
        <div class="form-group">
            <label for="amount">Amount:</label>
            <input type="string" class="form-control" id="amount" name="amount" placeholder="Enter amount">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>
